<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid DataContext="{Binding Source={x:Static local:ViewModel.Current}}">
        <StackPanel Orientation="Horizontal">
            <DataGrid ItemsSource="{Binding Input}" Width="60" VerticalAlignment="Center" Margin="2"></DataGrid>
            <DataGrid ItemsSource="{Binding Weights}" Width="60" VerticalAlignment="Center" Margin="2"></DataGrid>
            <DataGrid ItemsSource="{Binding ActualOutput}" Width="60" VerticalAlignment="Center" Margin="2"></DataGrid>
            <DataGrid ItemsSource="{Binding ExpectedOutput}" Width="60" VerticalAlignment="Center" Margin="2"></DataGrid>
            <StackPanel Margin="2">
                <ComboBox ItemsSource="{Binding Activations}" DisplayMemberPath="Name" SelectedItem="Activation"  Margin="2"></ComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
